			System.out.println("================================================="); 
			
			String SQL7 = "drop table pchand_department";
			statement.execute(SQL7);
			System.out.println("department table is dropped from the given database...");
			SQL7 = "CREATE TABLE IF NOT EXISTS `pchand_department` ("+
