			System.out.println("patient table is created in the given database..."); 
			
			String SQL6 = "INSERT INTO `pchand_patient` (`patientid`, `patientname`, `age`, `sex`, `address`, `phone`, `weight`, `doctorid`, `disease`) VALUES"+
